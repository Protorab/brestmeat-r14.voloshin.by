mixin select(addID,addClass,title,checkTriangle,options,selectName,setRequired,checkArrow,animate,scroll)
  div(class=`custom-select-wrapper ${addClass}-select__wrapper ${animate ? "animate": "" } ${scroll ? "scroll": "" }`)
    div(class=`custom-select ${addClass}-select`)
      select(
        id=`${addID}`,
        class=`custom-select-input ${addClass}-select__input`,
        required=`${setRequired ? setRequired : ""}`,
        name=`${selectName}`)
        option(label='variant')
      div(class=`custom-select__trigger ${addClass}-select__trigger`)
        span(class=`custom-select__title ${addClass}-select__title`)!=title
        if checkTriangle
          i(class=`custom-select__triangle ${addClass}__triangle`)
        if checkArrow 
          i(class=`custom-select__arrow ${addClass}__arrow`)
      div(class=`custom-options ${addClass}__options`)
        each option, index in options
          - var count = index+1
          - var itemTitle = option[0]
          if count==1
            span(class=`custom-option ${addClass}__option selected`,data-value='def')!=title
          else
            span(class=`custom-option ${addClass}__option`,data-value=`${itemTitle}`)!=itemTitle 
          