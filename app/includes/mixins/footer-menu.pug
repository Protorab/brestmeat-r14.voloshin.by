mixin footer-menu(menuItems,addClass)
  nav.footer-coll.footer-menu__nav(
      itemscope, 
      itemtype="http://schema.org/SiteNavigationElement",
      class=`${addClass ? `footer-menu__nav--${addClass}` : ""} `)
    ul.footer-menu(class=`${addClass ? `footer-menu--${addClass}`: ""} `)
      each menuItem, idx in menuItems
        - var count = idx+1
        - var title = menuItem[0]
        - var link = menuItem[1]
        li.footer-menu__item(
          itemprop="name",
          class=`${addClass ? `footer-menu__item--${addClass}`: ""}`)
          a.footer-menu__link(
            itemprop="url",
            href=`${link}`,
            class=`${addClass ? `footer-menu__link--${addClass}`: ""}`)!=title

