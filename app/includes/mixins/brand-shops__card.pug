mixin brand-shops__card(title,address,workModes,phones)
  article.brand-shops__card
    h6.brand-shops__card-title!=title
    p.brand-shops__card-subtitle Адрес:
    p.brand-shops__card-address !{address}
    p.brand-shops__card-subtitle Режим работы:
    ul.brand-shops__card-list
      each workMode, idx in workModes
        - var count = idx+1
        - var workTitle = workMode[0] || null
          li.brand-shops__card-list__item!=workTitle
    p.brand-shops__card-subtitle Телефоны:
    ul.brand-shops__card-list
      each phone, idx in phones
        - var count = idx+1
        - var phoneLink = phone[0]
        - var phoneTitle = phone[1]
          li.brand-shops__card-list__item   
            a.brand-shops__card-list__link(href=`tel:${phoneLink ? phoneLink : "#"}`)!=phoneTitle 

