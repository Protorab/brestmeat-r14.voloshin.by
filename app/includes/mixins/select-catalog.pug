mixin select(addID,addClass,title,checkArrow,options,selectName)
  div(class=`custom-select-wrapper ${addClass}-select__wrapper`)
    div(class=`custom-select ${addClass}-select`)
      select(
        id=`${addID}`,
        class=`custom-select-input ${addClass}-select__input`,
        required='',
        name=`${selectName}`)
        option(label='variant')
      div(class=`custom-select__trigger ${addClass}-select__trigger`)
        span!=title
        if checkArrow==triangle
          span(class=`triangle ${addClass}__triangle`)
        else 
          span(class=`arrow ${addClass}__arrow`)
      div(class=`custom-options ${addClass}__options`)
        each option, index in options
          - var count = index+1
          - var itemTitle = option[0]
          if count==1
            span(class=`custom-option ${addClass}__option selected`,data-value='def')!=title
          else
            span(class=`custom-option ${addClass}__option`,data-value=`${itemTitle}`)!=itemTitle 
          