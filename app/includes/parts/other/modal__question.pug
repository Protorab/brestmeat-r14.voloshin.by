#modal__question.modal
  .modal__body.modal__body-question.modal__body-form
    a.modal__form-close.close__modal(href="#",role="button") 
      span
      span
    form.modal__content.modal__form.modal__form-question(
      action="#", 
      enctype="multipart/form-data",
      method="post")
      include ./../../mixins/form-group
      include ./../../mixins/select
      a.modal__close.modal__close-form.close__modal(href="#",role="button") 
        span
        span
      fieldset.modal__form-content.modal__form-question-content
        legend.modal__form-title.modal__form-question-title Задать вопрос 
        h6.modal__form-subtitle.modal__form-question-subtitle Все поля являются обязательными для заполнения.
        .modal__form-coll.modal__form-question-coll
          +form-group(
            "ФИО","modal__question-name","text","name","Написать...","modal__form","","")
        .modal__form-coll.modal__form-question-coll
          +form-group(
            "Электронная почта","modal__question-email","email","email","Написать...","modal__form","","")
        .modal__form-coll.modal__form-question-coll
          +form-group(
            "Телефон","modal__question-phone","tel","phone","Написать...","modal__form","","")
        .modal__form-coll.modal__form-question-coll
          label.modal__form-label.form__label(for="modal__question-message")
            | Вопрос
            sup.red-color *
          textarea.form__textarea.modal__form-textarea.modal__form-question-textarea(
            name="message", 
            cols="30", 
            rows="10",
            id="modal__question-message",
            placeholder="Написать...")
        button.btn(type='submit').btn.modal__form-btn.modal__form-question-btn Отправить 